<!--pages/adminPersonal/adminPersonal.wxml-->
<i-message id="message" />

<i-panel title="管理员中心">
  <view style="padding: 15px;">
    <i-input title="原密码" value="{{oldPassword}}" bindblur="bindOldPasswordInput" maxlength="50" type="password" placeholder="必填" />
    <i-input title="新密码" value="{{newPassword}}" bindblur="bindNewPasswordInput" maxlength="50" type="password" placeholder="不修改不填" />
    <i-input title="确认新密码" value="{{againPassword}}" bindblur="bindAgainPasswordInput" maxlength="50" type="password" placeholder="不修改不填" />
    <i-input title="电话" value="{{phone}}" bindblur="bindPhoneInput" maxlength="50" />
    <i-input title="邮箱" value="{{email}}" bindblur="bindEmailInput" maxlength="50" />
    <i-button type="ghost" shape="circle" size="small" bind:click="alterSystemAdminClick" >确认修改</i-button>
  </view>
</i-panel>

