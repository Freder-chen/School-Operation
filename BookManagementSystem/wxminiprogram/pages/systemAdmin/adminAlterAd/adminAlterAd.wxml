<!--pages/adminAlterAd/adminAlterAd.wxml-->
<i-message id="message" />

<i-panel title="修改管理员信息">
  <view style="padding: 15px;">
    <i-input title="借阅号" value="{{id}}" bindblur="bindIdInput" maxlength="50" />
    <i-input title="用户名" value="{{name}}" bindblur="bindNameInput" maxlength="50" />
    <i-input title="初始密码" value="{{password}}" bindblur="bindPasswordInput" maxlength="50" type="password" placeholder="不修改不填" />
    <i-input title="电话" value="{{phone}}" bindblur="bindPhoneInput" maxlength="50" />
    <i-input title="邮箱" value="{{email}}" bindblur="bindEmailInput" maxlength="50" />
    <i-button type="ghost" shape="circle" size="small" bind:click="getBookAdminClick" >查询</i-button>
    <i-button type="ghost" shape="circle" size="small" bind:click="alterBookAdminClick" >确认修改</i-button>
  </view>
</i-panel>
